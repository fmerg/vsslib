{
  "compilerOptions": {
    "target": "es2016",
    "types": ["node", "jest"],
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "vsslib/*": [
        "./src/*"
      ],
      "vsslib": [
        "./src"
      ]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "declaration": true,
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "tests",
    "**/*.spec.ts",
    "./dist"
  ]
}
