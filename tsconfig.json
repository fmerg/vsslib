{
  "compilerOptions": {
    "target": "es2020",
    "types": ["node", "jest"],
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "vsslib/*": ["./src/*"],
      "vsslib": ["./src"],
      "tests": ["./tests"],
      "examples": ["./examples"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "declaration": true,
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "tests",
    "examples",
    "**/*.spec.ts",
    "./dist"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
