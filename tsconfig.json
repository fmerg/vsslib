{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "declaration": true,
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "tests",
    "**/*.spec.ts",
    "./dist"
  ]
}
